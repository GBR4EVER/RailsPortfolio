<h1>Sign Up</h1>

	<%= form_for @user, :url => user_create_path do |f| %>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>

	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>

<%= f.submit %>

<% end %>

	<p>___________________________________________</p>
	
