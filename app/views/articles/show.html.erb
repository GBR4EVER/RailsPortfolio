<h1><%= @article.title %></h1>

<%= session[:id] %>

<p><%= @article.body %></p>

<p><%= @article.draft %></p>

<p>Likes: <%= @all_likes.length %></p>

<% if @ip %>
	<%= form_for @like do |f| %>
		<%= f.hidden_field :article_id, value: @article.id %>
		<%= f.hidden_field :ip_address, value: request.remote_ip %>
		<%= f.submit value: "Like" %>
	<% end %>
<% end %>


<%= link_to("Edit this Article", article_edit_path(@article.id)) %>

<p>_________________________________________________________</p>

<ul>
	<li><%= link_to("Home", welcome_path) %></li>
	<li><%= link_to("Class Projects", class_project_path) %></li>
	<li><%= link_to("Contacts", contacts_path) %></li>
</ul>
