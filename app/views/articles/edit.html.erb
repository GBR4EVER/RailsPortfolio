<%= form_for @existing_article, :url => "/articles/#{@existing_article.id}" do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	
	<%= f.label :body %>
	<%= f.text_field :body %>
	
	<%= f.label :draft %>
	<%= f.text_field :draft %>
	
	<%= f.submit %>
	
<% end %>

