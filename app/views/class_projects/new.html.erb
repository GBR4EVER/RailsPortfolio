<h1>New Project</h1>

<% @class_project.errors.full_messages.each do |msg| %>

<p><%= msg %></p>

<% end %>

<!-- Creates a POST request to "/classprojects" -->

<%= form_for @class_project, :url => "/classprojects" do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :summary %>
	<%= f.text_field :summary %>
	
	<%= f.label :code_language %>
	<%= f.text_field :code_language %>
	
	<%= f.label :github %>
	<%= f.text_field :github %>
	
	<%= f.submit %>
	
<% end %>

<p>_________________________________________________________</p>

<ul>
	<li><%= link_to("Home", welcome_path) %></li>
	<li><%= link_to("Articles", article_list_path) %></li>
	<li><%= link_to("Contacts", contacts_path) %></li>
</ul>
